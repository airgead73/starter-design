<article>
  <h2>dashboard</h2>

  <ul>
    <% authors.forEach(author=> { %>

      <li>
        <p class="h4">
          <%= author.fullname %>
        </p>
        <p>
          <%= author.comments %>
        </p>
        <p class="small">
          <% const { books }=author; books.forEach((book,index)=> { %>

            <% if (index> 0) { %>
              &nbsp;
              <i class="fa-thin fa-pipe"></i>
              &nbsp;
              <% } %>

                <a href="">
                  <%=book.title %>
                </a>

                <% }) %>
        </p>

      </li>

      <% }) %>
  </ul>

</article>
